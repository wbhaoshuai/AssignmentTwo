<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Game title/image display -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/img_wakamole_text"/>

    <!-- Leaderboard section title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/purple"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:text="@string/Leaderboard"/>

    <!-- Container for leaderboard entries (takes most of the screen space) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <!-- 1st place entry row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar image for 1st place -->
            <ImageView
                android:id="@+id/iv_leaderboard_avatar1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Player name for 1st place -->
            <TextView
                android:id="@+id/tv_leaderboard_name1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="0dp"/>

            <!-- Player score for 1st place -->
            <TextView
                android:id="@+id/tv_leaderboard_score1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"/>

        </LinearLayout>

        <!-- 2nd place entry row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar image for 2nd place -->
            <ImageView
                android:id="@+id/iv_leaderboard_avatar2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Player name for 2nd place -->
            <TextView
                android:id="@+id/tv_leaderboard_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="0dp"/>

            <!-- Player score for 2nd place -->
            <TextView
                android:id="@+id/tv_leaderboard_score2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"/>

        </LinearLayout>

        <!-- 3rd place entry row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar image for 3rd place -->
            <ImageView
                android:id="@+id/iv_leaderboard_avatar3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Player name for 3rd place -->
            <TextView
                android:id="@+id/tv_leaderboard_name3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="0dp"/>

            <!-- Player score for 3rd place -->
            <TextView
                android:id="@+id/tv_leaderboard_score3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"/>

        </LinearLayout>

        <!-- 4th place entry row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar image for 4th place -->
            <ImageView
                android:id="@+id/iv_leaderboard_avatar4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Player name for 4th place -->
            <TextView
                android:id="@+id/tv_leaderboard_name4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="0dp"/>

            <!-- Player score for 4th place -->
            <TextView
                android:id="@+id/tv_leaderboard_score4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"/>

        </LinearLayout>

        <!-- 5th place entry row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Avatar image for 5th place -->
            <ImageView
                android:id="@+id/iv_leaderboard_avatar5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- Player name for 5th place -->
            <TextView
                android:id="@+id/tv_leaderboard_name5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="0dp"/>

            <!-- Player score for 5th place -->
            <TextView
                android:id="@+id/tv_leaderboard_score5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>